<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/linear_list"
    android:layout_height="wrap_content"
    android:background="@drawable/background_line_list"
    android:layout_marginBottom="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginLeft="0dp"
    android:animateLayoutChanges="true">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_combine_small"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:singleLine="false"
        android:gravity="left"
        android:layout_toRightOf= "@id/icon"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/color_primary"
        android:textSize= "14sp"
        android:id= "@+id/text_name_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/check_box_test"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.011"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/text_info_test_default"
        app:layout_constraintVertical_bias="0.98" />

    <TextView
        android:id="@+id/text_info_test_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/orange_light"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/check_box_test"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.597" />
    
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/check_box_test"
        android:animateLayoutChanges="true"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
