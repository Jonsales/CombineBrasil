<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_item_player"
    android:orientation="vertical"
    android:background="@drawable/background_border_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_person"
        android:id="@+id/img_players"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="@+id/img_players"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_players"
        app:layout_constraintBottom_toBottomOf="@+id/img_players"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/img_players"
        android:layout_marginTop="16dp" />


    <TextView
    android:id="@+id/text_name_player_list"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Nome do Jogador"
    android:singleLine="true"
    android:textColor="@color/color_primary_dark"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintLeft_toRightOf="@+id/img_players"
    android:layout_marginLeft="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/text_info_player_list"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.516" />


    <TextView
        android:id="@+id/text_info_player_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Jogador"
        android:singleLine="true"
        android:textColor="@color/dark"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />



</android.support.constraint.ConstraintLayout>