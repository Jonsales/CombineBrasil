<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true"
    android:id="@+id/activity_local_selective"
    tools:context="br.com.john.combinebrasil.CreateSelectiveActivity">

    <include
        layout="@layout/toolbar_default"
        android:id="@+id/include"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:background="@color/white"
        android:animateLayoutChanges="true"
        android:id="@+id/constraintLayout2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="0dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <ScrollView
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/scrollView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp">
            <android.support.constraint.ConstraintLayout
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textColor="@color/color_primary"
                    android:text="@string/local_selective"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="parent" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:layout_marginStart="48dp"
                    android:src="@drawable/create_selective_pass_two"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view1"
                    android:id="@+id/imageView3"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:contentDescription=""
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/edit_cep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/background_edit"
                    android:drawableLeft="@drawable/ic_local"
                    android:drawablePadding="10dp"
                    android:hint="@string/cep"
                    android:maxLength="9"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:textSize="16dp"
                    android:textColor="@color/color_primary"
                    android:textColorHint="@color/greyDark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3"
                    app:layout_constraintHorizontal_bias="0.0"
                    tools:ignore="RtlHardcoded,SpUsage" />

                <EditText
                    android:id="@+id/edit_street"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/background_edit"
                    android:drawableLeft="@drawable/ic_edit"
                    android:drawablePadding="10dp"
                    android:hint="@string/address"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:textSize="16dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/color_primary"
                    android:textColorHint="@color/greyDark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_cep"
                    tools:ignore="RtlHardcoded,SpUsage"
                    android:layout_marginTop="0dp"
                    app:layout_constraintRight_toLeftOf="@+id/edit_number"
                    android:layout_marginRight="8dp" />

                <EditText
                    android:id="@+id/edit_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    android:layout_marginRight="48dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/background_edit"
                    android:drawableLeft="@drawable/ic_edit"
                    android:drawablePadding="10dp"
                    android:hint="@string/number"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/color_primary"
                    android:textColorHint="@color/greyDark"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_cep"
                    tools:ignore="RtlHardcoded,SpUsage" />

                <EditText
                    android:id="@+id/edit_neighborhood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/background_edit"
                    android:drawableLeft="@drawable/ic_local"
                    android:drawablePadding="10dp"
                    android:hint="@string/neighborhood"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:paddingBottom="15dp"
                    android:textSize="16dp"
                    android:textColor="@color/color_primary"
                    android:textColorHint="@color/greyDark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="RtlHardcoded,SpUsage"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/edit_state"
                    android:layout_marginRight="48dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <EditText
                    android:id="@+id/edit_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/background_edit"
                    android:drawableLeft="@drawable/ic_local"
                    android:drawablePadding="10dp"
                    android:paddingRight="20dp"
                    android:hint="@string/state"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:maxLength="2"
                    android:paddingTop="10dp"
                    android:textAllCaps="true"
                    android:paddingBottom="15dp"
                    android:textSize="16dp"
                    android:textColor="@color/color_primary"
                    android:textColorHint="@color/greyDark"
                    app:layout_constraintTop_toBottomOf="@+id/edit_street"
                    tools:ignore="RtlHardcoded,SpUsage"
                    android:layout_marginRight="48dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="48dp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <EditText
                    android:id="@+id/edit_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/background_edit"
                    android:drawableLeft="@drawable/ic_edit"
                    android:drawablePadding="10dp"
                    android:hint="@string/city"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:textColor="@color/color_primary"
                    android:textColorHint="@color/greyDark"
                    android:paddingBottom="15dp"
                    android:textSize="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_neighborhood"
                    app:layout_constraintHorizontal_bias="1.0"
                    tools:ignore="RtlHardcoded,SpUsage" />

                <EditText
                    android:id="@+id/edit_complement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/background_edit"
                    android:drawableLeft="@drawable/ic_local"
                    android:drawablePadding="10dp"
                    android:hint="@string/complement"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:textColor="@color/color_primary"
                    android:textColorHint="@color/greyDark"
                    android:paddingBottom="15dp"
                    android:textSize="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_city"
                    tools:ignore="RtlHardcoded,SpUsage" />

                <Button
                    android:id="@+id/btn_create_selective"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/proximo_passo"
                    android:textColor="@color/white"
                    android:background="@drawable/background_button_blue"
                    android:layout_marginRight="48dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="48dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginBottom="33dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="48dp"
                    app:layout_constraintTop_toBottomOf="@+id/edit_complement"
                    app:layout_constraintVertical_bias="1.0" />

            </android.support.constraint.ConstraintLayout>



        </ScrollView>



    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_primary"
        android:id="@+id/constraint_not_connection"
        android:clickable="true"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_branco"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:id="@+id/imageView4"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.5"/>

        <ImageView
            android:id="@+id/image_not_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_no_wifi"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_message_not_connect"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.65" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/no_connection"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:id="@+id/txt_message_not_connect"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_try_again_connect" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/try_again"
            android:textColor="@color/color_primary"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/background_button_white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/btn_try_again_connect" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/grey_transparent"
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/constraint_progress"
        android:animateLayoutChanges="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_teams"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/dark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/progressBar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_calendar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/grey_transparent"
        android:clickable="true"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/background_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.51">

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendar_dates"
                style="@android:style/Widget.Material.CalendarView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_confirm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:text="@string/confirm"
                android:textAllCaps="true"
                android:textColor="@color/color_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calendar_dates"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_cancel_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/greyDark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/btn_confirm_date"
                app:layout_constraintTop_toBottomOf="@+id/calendar_dates"
                app:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
