<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_message_option"
    android:orientation="vertical"
    android:background="@color/grey_transparent"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_border"
            >
            <TextView
                android:id="@+id/text_title_message_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mensagem"
                android:textColor="@color/white"
                android:background="@color/color_primary"
                android:layout_margin="1dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="25dp"
                android:textSize="18sp"
                android:gravity="left"/>
            <TextView
                android:id="@+id/text_alert_message_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aviso alerta aviso alerta aviso alerta aviso alerta aviso alerta"
                android:textColor="@color/black"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:paddingRight="10sp"
                android:layout_margin="1dp"
                android:textSize="16sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10sp"
                    android:gravity="center_horizontal"
                    >

                    <Button
                        android:id="@+id/button_negative_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_white"
                        android:textColor="@color/color_primary"
                        android:text="NÃ£o"
                        android:layout_marginBottom="10sp"
                        android:paddingLeft="50sp"
                        android:paddingRight="50sp"
                        android:layout_marginRight="30sp"
                        />

                    <Button
                        android:id="@+id/button_positive_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_blue"
                        android:textColor="@color/white"
                        android:text="Sim"
                        android:layout_marginBottom="10sp"
                        android:paddingLeft="50sp"
                        android:paddingRight="50sp" />

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>