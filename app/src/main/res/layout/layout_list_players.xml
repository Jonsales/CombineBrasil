<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_list"
    android:animateLayoutChanges="true"
    android:id="@+id/linear_list_players"
    tools:context="br.com.john.combinebrasil.CreateSelectiveActivity">

    <ImageView
        android:id="@+id/image_athlete"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:layout_marginStart="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_combine_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_name_player_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="Nome do Jogador"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/color_primary_dark"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/text_code_list"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_athlete"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/text_code_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo"
        android:textColor="@color/color_primary_dark"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_first_result_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Primeiro resultado: 1:02"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_name_player_list"
        app:layout_constraintLeft_toRightOf="@+id/image_athlete"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/text_second_result_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textColor="@color/black"
        android:text="Segundo resultado: 1:02"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/text_name_player_list"
        app:layout_constraintLeft_toRightOf="@+id/text_first_result_list"
        android:layout_marginLeft="8dp" />

    </android.support.constraint.ConstraintLayout>