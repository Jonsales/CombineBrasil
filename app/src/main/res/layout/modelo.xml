<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_timer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.john.combinebrasil.TimerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <include layout="@layout/toolbar_default" android:id="@+id/include"/>

        <LinearLayout
            android:id="@+id/linear_insert"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@color/white"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/text_name_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="15sp"
                android:text="@string/testes"
                android:textAlignment="center"
                android:gravity="center"
                />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/background_button_circle_green"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"></LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/text_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="00:60"
                        android:textColor="@color/black"
                        android:textSize="50sp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:animateLayoutChanges="true">

                <!-- BUTTON RESET-->
                <LinearLayout
                    android:id="@+id/linear_visibility_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">
                    <LinearLayout
                        android:id="@+id/linear_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_circle_white"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"></LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:src="@drawable/reset_clock"
                            android:id="@+id/image_icon_reset" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"></LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <!-- BUTTON PLAY-->
                    <LinearLayout
                        android:id="@+id/linear_button_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_circle_green"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"></LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:src="@drawable/icon_play"
                            android:id="@+id/image_icon_button_play" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"></LinearLayout>
                    </LinearLayout>

                    <!-- BUTTON STOP-->
                    <LinearLayout
                        android:id="@+id/linear_button_stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_circle_red"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:animateLayoutChanges="true"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"></LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:src="@drawable/stop"
                            android:id="@+id/image_icon_button_stop" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"></LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:paddingBottom="15sp"
                android:paddingTop="15sp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/linear_values"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:animateLayoutChanges="true">
                    <TextView
                        android:id="@+id/text_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:text="@string/result_value"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"/>
                        <EditText
                            android:id="@+id/edit_first_result"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:layout_margin="10sp"
                            android:padding="10sp"
                            android:textSize="18sp"
                            android:maxLength="4"
                            android:textAlignment="center"
                            android:digits="0123456789,"
                            android:inputType="number"
                            android:singleLine="true"
                            android:background="@drawable/background_edit"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:animateLayoutChanges="true"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:textAlignment="center"
                        android:text="@string/second_result"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"/>
                        <EditText
                            android:id="@+id/edit_second_result"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_margin="10sp"
                            android:padding="10sp"
                            android:textSize="18sp"
                            android:maxLength="4"
                            android:digits="0123456789,"
                            android:inputType="number"
                            android:background="@drawable/background_edit"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:foregroundGravity="bottom">
                <Button
                    android:id="@+id/button_save_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:text="@string/salvar_dados"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/background_button_blue"/>

                <Button
                    android:id="@+id/button_inconclusive_results"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/inconclusive"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/background_button_red"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_results_done"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            >

            <TextView
                android:id="@+id/txt_name_result"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:textColor="@color/color_primary"
                android:textSize="22sp"
                android:padding="20sp"
                android:text="@string/name"
                android:textAlignment="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/first_result"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/txt_first_result_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20:00"
                        android:textColor="@color/color_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/second_result"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/txt_second_result_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20:00"
                        android:textColor="@color/color_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:paddingBottom="15sp"
                    />

                <RatingBar
                    android:id="@+id/rating_result_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:progressTint="@color/yellow"
                    android:secondaryProgressTint="@color/yellow"
                    />
                <TextView
                    android:id="@+id/txt_rating_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary"
                    android:text="Muito alto"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingBottom="20sp"
                >
                <Button
                    android:id="@+id/button_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/back_to_test"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/background_button_blue"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent"
        android:orientation="vertical"
        android:clickable="true"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:background="@drawable/background_white_corner"
                >
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear_details_test"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_border"
                            android:layout_margin="10sp"
                            android:padding="10sp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:animateLayoutChanges="true">
                            <TextView
                                android:id="@+id/text_info_name_test"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nome do Teste"
                                android:textColor="@color/color_primary"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:padding="10sp" />

                            <TextView
                                android:id="@+id/text_info_details_test"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/lorem"
                                android:textAlignment="center"
                                android:lineSpacingExtra="2.5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:visibility="gone"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@color/grey"
                                ></LinearLayout>
                            <ImageView
                                android:id="@+id/img_test_arrow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="7sp"
                                android:src="@drawable/arrow_down"/>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_details_player"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_border"
                            android:layout_margin="10sp"
                            android:padding="10sp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:animateLayoutChanges="true">
                            <TextView
                                android:id="@+id/text_info_name_athlete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nome do Jogador"
                                android:textColor="@color/color_primary"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:padding="10sp" />

                            <TextView
                                android:id="@+id/text_info_details_athlete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/lorem"
                                android:textAlignment="center"
                                android:lineSpacingExtra="2.5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:visibility="gone"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@color/grey"
                                ></LinearLayout>
                            <ImageView
                                android:id="@+id/img_player_arrow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="7sp"
                                android:src="@drawable/arrow_down"/>



                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

                <Button
                    android:id="@+id/button_close_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@drawable/background_button_blue"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_rating"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_border"
                >
                <TextView
                    android:id="@+id/text_title_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qualification"
                    android:textColor="@color/white"
                    android:background="@color/color_primary"
                    android:layout_margin="1dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="25dp"
                    android:textSize="18sp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/text_alert_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qualification_message"
                    android:textColor="@color/black"
                    android:paddingBottom="30sp"
                    android:paddingTop="30sp"
                    android:layout_margin="1dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <RatingBar
                    android:id="@+id/rating_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:progressTint="@color/yellow"
                    android:secondaryProgressTint="@color/yellow"
                    />

                <TextView
                    android:id="@+id/text_show_qualify_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_ready_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_blue"
                        android:textColor="@color/white"
                        android:text="@string/ready"
                        android:layout_marginBottom="20sp"
                        android:layout_marginTop="15sp"
                        android:paddingLeft="50sp"
                        android:paddingRight="50sp"
                        />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_configure_timer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent_menu"
        android:orientation="vertical"
        android:clickable="true"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:background="@drawable/background_border"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/configure_timer"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:textSize="16sp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="10sp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:textColor="@color/black"
                                        android:text="Minutos"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:paddingLeft="15sp"
                                        android:textColor="@color/black"
                                        android:text="Segundos"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                        android:id="@+id/spinner_minutes"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:paddingLeft="10sp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/greyDark"
                                        android:textSize="16sp"
                                        android:layout_marginBottom="15sp"
                                        android:background="@drawable/background_edit"
                                        />
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.1"
                                        android:text=":"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textAlignment="center"/>

                                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                                        android:id="@+id/spinner_seconds"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:paddingLeft="10sp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/greyDark"
                                        android:textSize="16sp"
                                        android:layout_marginBottom="15sp"
                                        android:background="@drawable/background_edit"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/button_cancel"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:textColor="@color/color_primary"
                        android:textSize="14sp"
                        android:text="@string/cancel"
                        android:background="@drawable/background_button_white"
                        />

                    <Button
                        android:id="@+id/button_configure_timer"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="@string/adicionar"
                        android:background="@drawable/background_button_blue"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>