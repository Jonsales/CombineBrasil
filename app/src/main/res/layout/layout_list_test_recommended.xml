<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/linear_list"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginLeft="0dp"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_combine_small"
        android:layout_marginStart="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:id="@+id/check_box_test"
        android:animateLayoutChanges="true"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:gravity="left"
        android:layout_toRightOf= "@id/icon"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/color_primary"
        android:textSize= "14sp"
        android:id= "@+id/text_name_test"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:singleLine="false"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/check_box_test" />

    <TextView
        android:id="@+id/text_info_test_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/orange_light"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name_test"
        app:layout_constraintRight_toRightOf="parent" />



</android.support.constraint.ConstraintLayout>
