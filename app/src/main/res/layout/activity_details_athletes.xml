<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details_athletes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.john.combinebrasil.DetailsAthletes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <include layout="@layout/toolbar_default" android:id="@+id/include"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@drawable/background_border"
            android:layout_margin="10sp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_name_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Jogador"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"
                android:padding="10sp" />

            <TextView
                android:id="@+id/text_details_athlete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Jogador"
                android:textColor="@color/greyDark"
                android:textSize="18sp"
                android:padding="10sp" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/background_button_blue"
            android:text="@string/edit_athlete"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="16sp"
            />
    </LinearLayout>
</LinearLayout>

</RelativeLayout>
